
<div class="container">
    
    <h1>Players</h1>
    <div class="row">
        <aside class="col-sm-4">
            <div id="userInfo" class="panel panel-default">
                <div class="panel-heading">User info</div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item" id="userInfoFirstName"></li>
                        <li class="list-group-item" id="userInfoLastName"></li>
                        <li class="list-group-item" id="userInfoHandicap"></li>
                    </ul>
                </div>
            </div>
        </aside>
        <main class="col-sm-8">
            <h2>User list</h2>
            <div id="userList">
            <table>
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                    <th>UserName</th>
                    <th>NationalHandicap</th>
                    <th>Email</th>
                    <th>Update</th>
                    <th>Delete?</th>
                    </thead>
                    <tbody></tbody>
                </table>
            </table>
            </div>
            <a class="btn btn-default add-user" href="#userControls" data-toggle='collapse' data-target='#userControls'>Add/Update user</a>
            <div id="userControls" class="collapse panel panel-default">

                <div class="panel-heading">User details</div>
                <div id="addUser" class="form-horizontal panel-body" data-userid="">
                    <fieldset>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Username</label>
                            <div class="col-sm-10">
                                <input id="inputUserName" placeholder="Username" class="form-control"type="text"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Firstname</label>
                            <div class="col-sm-10">
                                <input id="inputUserFirstName" placeholder="First Name" class="form-control" type="text"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Lastname</label>
                            <div class="col-sm-10">
                                <input id="inputUserLastName" placeholder="Last Name" class="form-control" type="text"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Handicap</label>
                            <div class="col-sm-10">
                                <input id="inputUserHandicap" placeholder="Handicap" class="form-control" type="text"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">Email</label>
                            <div class="col-sm-10">
                                <input id="inputUserEmail" placeholder="Email" class="form-control" type="text"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <button id="btnAddUser" class="btn pull-right"></button>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </main>
    </div>
</div>
